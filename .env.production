# Production environment variables
# For production, use a PostgreSQL database via Prisma Accelerate
# https://www.prisma.io/docs/data-platform/accelerate

# Direct Database URL for Prisma to connect to PostgreSQL
DATABASE_URL="${DATABASE_URL}"

# Security keys
NEXTAUTH_SECRET="${NEXTAUTH_SECRET}"
CRON_SECRET="${CRON_SECRET}"

# Application URLs
NEXTAUTH_URL="${NEXTAUTH_URL}"
NEXTAUTH_URL_INTERNAL="${NEXTAUTH_URL}"

# Email settings
EMAIL_SERVER_HOST="${EMAIL_SERVER_HOST}"
EMAIL_SERVER_PORT="${EMAIL_SERVER_PORT}"
EMAIL_SERVER_USER="${EMAIL_SERVER_USER}"
EMAIL_SERVER_PASSWORD="${EMAIL_SERVER_PASSWORD}"
EMAIL_FROM="${EMAIL_FROM}" 